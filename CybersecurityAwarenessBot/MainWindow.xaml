<Window x:Class="CybersecurityAwarenessBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Cybersecurity Awareness Bot - Protecting South African Citizens" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        MinHeight="600" MinWidth="1000">
    
    <Grid>
        <!-- This defines the main layout columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        
        <!-- This is the main chat interface area -->
        <Border Grid.Column="0" Background="#2D2D30" CornerRadius="10" Margin="10">
            <Grid>
                <!-- This defines the chat area layout -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- This is the header area with logo and title -->
                <StackPanel Grid.Row="0" Margin="20,20,20,10">
                    <TextBlock x:Name="LogoDisplay" 
                               FontFamily="Consolas" 
                               FontSize="10" 
                               Foreground="#00CED1" 
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>
                    <TextBlock Text="CYBERSECURITY AWARENESS BOT" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               Margin="0,10,0,5"/>
                    <TextBlock Text="Protecting South African Citizens Through Security Education" 
                               FontSize="12" 
                               Foreground="#32CD32" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!-- This is the chat conversation area -->
                <Border Grid.Row="1" Background="#1E1E1E" CornerRadius="5" Margin="20,10">
                    <ScrollViewer x:Name="ChatScrollViewer" VerticalScrollBarVisibility="Auto">
                        <RichTextBox x:Name="ChatDisplay" 
                                     Background="#1E1E1E" 
                                     Foreground="White" 
                                     FontFamily="Consolas" 
                                     FontSize="12" 
                                     IsReadOnly="True" 
                                     BorderThickness="0"
                                     Padding="10"
                                     VerticalScrollBarVisibility="Disabled"
                                     HorizontalScrollBarVisibility="Disabled"/>
                    </ScrollViewer>
                </Border>
                
                <!-- This is the user input area -->
                <Grid Grid.Row="2" Margin="20,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="UserInput" 
                             Grid.Column="0"
                             Background="#2D2D30" 
                             Foreground="White" 
                             FontSize="12" 
                             Padding="10" 
                             BorderBrush="#00CED1" 
                             BorderThickness="2"
                             KeyDown="UserInput_KeyDown"/>
                    
                    <Button x:Name="SendButton" 
                            Grid.Column="1"
                            Content="Send" 
                            Background="#00CED1" 
                            Foreground="Black" 
                            FontWeight="Bold" 
                            Padding="15,10" 
                            Margin="10,0,0,0" 
                            BorderThickness="0"
                            Click="SendButton_Click"/>
                </Grid>
                
                <!-- This is the help and controls area -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20,10,20,20">
                    <Button x:Name="HelpButton" 
                            Content="Help" 
                            Background="#32CD32" 
                            Foreground="Black" 
                            FontWeight="Bold" 
                            Padding="10,5" 
                            Margin="5"
                            BorderThickness="0"
                            Click="HelpButton_Click"/>
                    
                    <Button x:Name="ClearButton" 
                            Content="Clear Chat" 
                            Background="#FF6B6B" 
                            Foreground="White" 
                            FontWeight="Bold" 
                            Padding="10,5" 
                            Margin="5"
                            BorderThickness="0"
                            Click="ClearButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- This is the splitter between chat and task areas -->
        <GridSplitter Grid.Column="1" 
                      Background="#555" 
                      HorizontalAlignment="Stretch"/>
        
        <!-- This is the task management panel -->
        <Border Grid.Column="2" Background="#2D2D30" CornerRadius="10" Margin="10">
            <Grid>
                <!-- This defines the task panel layout -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- This is the task panel header -->
                <TextBlock Grid.Row="0" 
                           Text="ðŸ”’ TASK ASSISTANT" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="#00CED1" 
                           HorizontalAlignment="Center" 
                           Margin="10,20,10,10"/>
                
                <!-- This is the task creation area -->
                <Border Grid.Row="1" Background="#1E1E1E" CornerRadius="5" Margin="10">
                    <StackPanel Margin="10">
                        <TextBlock Text="Create New Task:" 
                                   Foreground="White" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,5"/>
                        
                        <TextBlock Text="Task Title:" 
                                   Foreground="#CCC" 
                                   FontSize="10" 
                                   Margin="0,0,0,2"/>
                        
                        <TextBox x:Name="TaskTitleInput" 
                                 Background="#2D2D30" 
                                 Foreground="White" 
                                 Padding="5" 
                                 Margin="0,0,0,5"
                                 BorderBrush="#555"
                                 BorderThickness="1"
                                 Tag="Enter task title (e.g., Enable Two-Factor Authentication)"/>
                        
                        <TextBlock Text="Task Description:" 
                                   Foreground="#CCC" 
                                   FontSize="10" 
                                   Margin="0,0,0,2"/>
                        
                        <TextBox x:Name="TaskDescriptionInput" 
                                 Background="#2D2D30" 
                                 Foreground="White" 
                                 Padding="5" 
                                 Margin="0,0,0,5"
                                 Height="60"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 BorderBrush="#555"
                                 BorderThickness="1"
                                 Tag="Enter detailed description of what needs to be done"/>
                        
                        <TextBlock Text="Reminder Date (Optional):" 
                                   Foreground="#CCC" 
                                   FontSize="10" 
                                   Margin="0,0,0,2"/>
                        
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox x:Name="DateDisplayBox"
                                     Grid.Column="0"
                                     Background="#2D2D30" 
                                     Foreground="White" 
                                     Padding="5" 
                                     BorderBrush="#555"
                                     BorderThickness="1"
                                     Text="Click calendar icon to select date"
                                     IsReadOnly="True"
                                     Margin="0,0,3,0"/>
                            
                            <DatePicker x:Name="TaskReminderDate" 
                                        Grid.Column="1"
                                        Background="#2D2D30" 
                                        Foreground="White" 
                                        BorderBrush="#555"
                                        BorderThickness="1"
                                        DisplayDateStart="{x:Static sys:DateTime.Today}"
                                        SelectedDateChanged="TaskReminderDate_SelectedDateChanged"
                                        Width="30"
                                        Padding="0">
                                <DatePicker.Resources>
                                    <Style TargetType="DatePickerTextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="0"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Button Grid.Column="1" 
                                                                x:Name="PART_Button" 
                                                                Background="#555"
                                                                BorderBrush="#555"
                                                                Foreground="White"
                                                                Content="ðŸ“…"
                                                                FontSize="12"/>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DatePicker.Resources>
                            </DatePicker>
                        </Grid>
                        
                        <Button x:Name="AddTaskButton" 
                                Content="Add Task" 
                                Background="#32CD32" 
                                Foreground="Black" 
                                FontWeight="Bold" 
                                Padding="5" 
                                BorderThickness="0"
                                Click="AddTaskButton_Click"/>
                    </StackPanel>
                </Border>
                
                <!-- This is the task list area -->
                <Border Grid.Row="2" Background="#1E1E1E" CornerRadius="5" Margin="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" 
                                   Text="Current Tasks:" 
                                   Foreground="White" 
                                   FontWeight="Bold" 
                                   Margin="10,10,10,5"/>
                        
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ListBox x:Name="TaskListBox" 
                                     Background="Transparent" 
                                     BorderThickness="0"
                                     Margin="10"
                                     SelectionChanged="TaskListBox_SelectionChanged">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#2D2D30" 
                                                CornerRadius="3" 
                                                Padding="8" 
                                                Margin="0,2">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                
                                                <TextBlock Grid.Row="0" 
                                                           Text="{Binding Title}" 
                                                           Foreground="White" 
                                                           FontWeight="Bold" 
                                                           FontSize="12"/>
                                                
                                                <TextBlock Grid.Row="1" 
                                                           Text="{Binding Description}" 
                                                           Foreground="#CCC" 
                                                           FontSize="10" 
                                                           TextWrapping="Wrap"
                                                           Margin="0,2,0,0"/>
                                                
                                                <TextBlock Grid.Row="2" 
                                                           Text="{Binding ReminderText}" 
                                                           Foreground="#00CED1" 
                                                           FontSize="9" 
                                                           Margin="0,2,0,0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </ScrollViewer>
                    </Grid>
                </Border>
                
                <!-- This is the task action buttons area -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Button x:Name="EditTaskButton" 
                            Content="Edit" 
                            Background="#FFA500" 
                            Foreground="Black" 
                            FontWeight="Bold" 
                            Padding="10,5" 
                            Margin="5"
                            BorderThickness="0"
                            Click="EditTaskButton_Click"/>
                    
                    <Button x:Name="CompleteTaskButton" 
                            Content="Complete" 
                            Background="#32CD32" 
                            Foreground="Black" 
                            FontWeight="Bold" 
                            Padding="10,5" 
                            Margin="5"
                            BorderThickness="0"
                            Click="CompleteTaskButton_Click"/>
                    
                    <Button x:Name="DeleteTaskButton" 
                            Content="Delete" 
                            Background="#FF6B6B" 
                            Foreground="White" 
                            FontWeight="Bold" 
                            Padding="10,5" 
                            Margin="5"
                            BorderThickness="0"
                            Click="DeleteTaskButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window> 